<div class="flex items-center justify-center h-screen">
  <div class="max-w-md bg-black border-4 border-yellow-400 p-6 rounded-lg shadow-md">
    <h2 class="text-yellow-700 text-center text-2xl font-bold mb-4">Edit Profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-4">
    <%= f.label :profile_picture, class: "block text-yellow-700 font-bold mb-2" %>
    <%= f.file_field :profile_picture, class: "form-input mt-1 block w-full rounded-md border-gray-300" %>
  </div>  

      <div class="mb-4">
        <%= f.label :username, class: "block text-yellow-700 font-bold mb-2" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-input mt-1 block w-full rounded-md border-gray-300 bg-black-700 text-yellow-700" %>
      </div>

      <div class="mb-4">
        <%= f.label :first_name, class: "block text-yellow-700 font-bold mb-2" %>
        <%= f.text_field :first_name, autocomplete: "given-name", class: "form-input mt-1 block w-full rounded-md border-gray-300 bg-black-700 text-yellow-700" %>
      </div>

      <div class="mb-4">
        <%= f.label :last_name, class: "block text-yellow-700 font-bold mb-2" %>
        <%= f.text_field :last_name, autocomplete: "family-name", class: "form-input mt-1 block w-full rounded-md border-gray-300 bg-black-700 text-yellow-700" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-yellow-700 font-bold mb-2" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-input mt-1 block w-full rounded-md border-gray-300 bg-black-700 text-yellow-700" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: "block text-yellow-700 font-bold mb-2" %> <i class="text-gray-400">(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input mt-1 block w-full rounded-md border-gray-300 bg-black-700 text-yellow-700" %>
        <% if @minimum_password_length %>
          <br />
          <em class="text-gray-400"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-yellow-700 font-bold mb-2" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input mt-1 block w-full rounded-md border-gray-300 bg-black-700 text-yellow-700" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: "block text-yellow-700 font-bold mb-2" %> <i class="text-gray-400">(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input mt-1 block w-full rounded-md border-gray-300 bg-black-700 text-yellow-700" %>
      </div>

      <div class="text-center">
        <%= f.submit "Update", class: "bg-yellow-700 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <div class="text-center font-bold  mt-2 text-yellow-700">
      mch aajbek? ay tir <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <%= link_to "Back", :back, class: "block text-center text-yellow-500 mt-4" %>
  </div>
</div>
