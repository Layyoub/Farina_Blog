<div class="flex items-center justify-center h-screen">
  <div class="max-w-md bg-black border-4 border-yellow-400 p-6 rounded-lg shadow-md">
    <h2 class="text-yellow-700 text-center text-2xl font-bold mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-yellow-700 font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input mt-1 block w-full rounded-md border-gray-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-yellow-700 font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input mt-1 block w-full rounded-md border-gray-300" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: "form-checkbox" %>
          <%= f.label :remember_me, class: "ml-2 text-gray-700" %>
        </div>
      <% end %>
      <div class="text-center mt-2">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-yellow-700 hover:text-blue-700 font-bold" %>
    </div>

      <div class="text-center">
        <%= f.submit "Log in", class: "bg-yellow-700 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    <div class="text-center mt-4">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "bg-yellow-700 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
     
  </div>
</div>
