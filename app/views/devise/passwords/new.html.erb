<div class="flex items-center justify-center h-screen">
  <div class="max-w-md bg-black border-4 border-yellow-400 p-6 rounded-lg shadow-md">
    <h2 class="text-yellow-700 text-center text-2xl font-bold mb-4">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-yellow-700 font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input mt-1 block w-full rounded-md border-gray-300 bg-white-400" %>
      </div>

      <div class="text-center">
        <%= f.submit "Send me reset password instructions", class: "bg-yellow-700 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
