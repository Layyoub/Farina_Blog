<div class="flex items-center justify-center h-screen">
  <%= form_with model: article, class: "max-w-md bg-black border-yellow-500 border-4 p-6 rounded-lg shadow-md" do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-300 font-bold mb-2 text-xl" %>
      <%= form.text_field :title, class: "form-input mt-1 block w-full rounded-md border-gray-300 bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent" %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="text-red-500"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :body, class: "block text-gray-300 font-bold mb-2 text-xl" %>
      <%= form.text_area :body, class: "form-textarea mt-1 block w-full rounded-md border-gray-300 bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent" %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="text-red-500"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :status, class: "block text-gray-300 font-bold mb-2 text-xl" %>
      <%= form.select :status, Visible::VALID_STATUSES, selected: article.status || 'public', class: "form-select mt-1 block w-full rounded-md border-gray-300 bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent" %>
    </div>

    <%= form.file_field :image, class: "mb-4" %>

    <%= form.submit "Submit", class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-110" %>
  <% end %>

  <style>
    .rounded-lg {
      border-radius: 12px;
    }

    .shadow-md {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .bg-gray-800 {
      background-color: #1f2937;
    }

    .border-yellow-500 {
      border-color: #f59e0b;
    }

    .text-gray-300 {
      color: #d1d5db;
    }

    .text-red-500 {
      color: #ef4444;
    }

    .form-input {
      padding: 0.5rem;
    }

    .form-select {
      padding: 0.5rem;
    }

    .text-white {
      color: #fff;
    }

    .bg-blue-500 {
      background-color: #3b82f6;
    }

    .hover\:bg-blue-700:hover {
      background-color: #2563eb;
    }

    .rounded-md {
      border-radius: 0.375rem;
    }
  </style>
</div>
