<%= form_with model: [@article, @article.comments.build], class: "max-w-lg mx-auto" do |form| %>
  <div class="bg-black rounded-lg shadow-lg p-4 mb-4 text-white relative overflow-hidden transform hover:scale-105 transition duration-300 ease-in-out">
    <div class="mb-4">
      <%= form.label :commenter, class: "block text-yellow-400 font-bold mb-2" %><br>
      <%= form.text_field :commenter, class: "form-input mt-1 block w-full rounded-md border-yellow-500 bg-gray-800 text-white focus:border-yellow-400 focus:ring-yellow-400 magical-border" %>
    </div>
    
    <div class="mb-4">
      <%= form.label :body, class: "block text-yellow-400 font-bold mb-2" %><br>
      <%= form.text_area :body, class: "form-textarea mt-1 block w-full rounded-md border-yellow-500 bg-gray-800 text-white focus:border-yellow-400 focus:ring-yellow-400 magical-border" %>
    </div>
    
    <div class="mb-4">
      <%= form.label :status, class: "block text-yellow-400 font-bold mb-2" %><br>
      <%= form.select :status, Visible::VALID_STATUSES, selected: 'public', class: "form-select mt-1 block w-full rounded-md border-yellow-500 bg-gray-800 text-white focus:border-yellow-400 focus:ring-yellow-400 magical-border" %>
    </div>
    
    <%= form.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
